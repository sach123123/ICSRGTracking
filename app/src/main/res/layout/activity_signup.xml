<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.icsrgtracking.SignupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:id="@+id/tv_SignUpHead"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_below="@+id/tv_SignUpHead"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/Text">
            <EditText
                android:id="@+id/et_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Name"
                android:textSize="16sp"
                android:textColor="@color/white"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_below="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/Text"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="E-mail id or mobile no."
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_SignUsername"
            android:layout_below="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/Text"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_SignUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:drawableLeft="@drawable/usersign"
                android:drawablePadding="5dp"
                android:hint="User Name"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_SignPassword"
            android:layout_below="@+id/input_layout_SignUsername"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/Text"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_SignPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:drawableLeft="@drawable/passsign"
                android:drawablePadding="5dp"
                android:hint="Password"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_SignConPassword"
            android:layout_below="@+id/input_layout_SignPassword"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/Text"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_SignConPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Confirm Password"
                android:drawableLeft="@drawable/conpasssign"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/whiterectangle"
            android:text="Sign Up"
            android:id="@+id/tv_SignSignUp"
            android:textSize="16sp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/input_layout_SignConPassword"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>


    </RelativeLayout>

</RelativeLayout>
